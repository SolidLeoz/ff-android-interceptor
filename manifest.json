{
  "manifest_version": 2,
  "name": "Mobile Interceptor (PT)",
  "version": "0.1.0",
  "description": "Interceptor + Repeater mobile-first per PT autorizzati (Firefox Android).",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "tabs",
    "cookies"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Interceptor Dashboard"
  },
  "options_ui": {
    "page": "ui/dashboard.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mobile-interceptor@solidleoz",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": []
      }
    }
  }
}